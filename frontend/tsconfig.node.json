{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node",  // Change this from 'bundler' to 'node' for Jest compatibility
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false,  // Set to false to allow output files
    "emitDeclarationOnly": true,  // Emit only declaration files
    "declaration": true,  // Add this to generate .d.ts files
    "composite": true,  // Enable composite projects for project references

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Jest Support */
    "types": ["node", "jest"]  // Ensure Jest types are included
  },
  "include": ["vite.config.ts", "**/*.test.ts", "**/*.test.tsx"]  // Include test files
}
