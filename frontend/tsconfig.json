{
  "compilerOptions": {
    "target": "ES2020",   // ES2020 or higher
    "module": "ESNext",    // ESNext or higher (needed for import.meta)
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "noEmit": true,        // Optional, depending on your setup
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "isolatedModules": true
  },
  "include": [
    "src",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
